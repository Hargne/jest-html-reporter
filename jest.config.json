{
  "roots": ["<rootDir>"],
  "preset": "ts-jest",
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**/*.{ts,tsx}",
    "!src/style.ts",
    "!**/**/*.d.ts",
    "!**/test/*.{ts,tsx}",
    "!**/node_modules/**",
    "!**/coverage/**",
    "!**/vendor/**"
  ],
  "coverageDirectory": "./coverage",
  "coverageReporters": ["json", "html", "text", "text-summary"],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  },
  "verbose": true
}
