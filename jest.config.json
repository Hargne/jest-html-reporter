{
  "roots": ["<rootDir>/src"],
  "preset": "ts-jest",
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**/*.ts",
    "!**/**/*.d.ts",
    "!**/**/*.types.ts",
    "!./src/__mock__/**/*.ts"
  ],
  "coverageDirectory": "./coverage",
  "coverageReporters": ["json", "html", "text", "text-summary"],
  "coverageThreshold": {
    "global": {
      "branches": 75,
      "functions": 75,
      "lines": 75,
      "statements": 75
    }
  },
  "testEnvironment": "jsdom",
  "verbose": true
}
