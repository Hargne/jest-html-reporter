{
  "roots": ["<rootDir>"],
  "preset": "ts-jest",
  "globals": {
    "ts-jest": {
      "babelConfig": true
    }
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**/*.{ts,tsx}",
    "!src/style.ts",
    "!**/test/*.{ts,tsx}",
    "!**/node_modules/**",
    "!**/coverage/**",
    "!**/vendor/**"
  ],
  "coverageDirectory": "./coverage",
  "coverageReporters": ["json", "html", "text", "text-summary"],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  },
  "verbose": false,
  "reporters": [
    "default",
    [
      "./dist",
      {
        "pageTitle": "Test Suite Reporter",
        "outputPath": "<rootDir>/testResultsProcessorResult.html",
        "includeFailureMsg": true,
        "includeConsoleLog": true,
        "useCssFile": true,
        "sort": "titleAsc",
        "append": false
      }
    ]
  ]
}
