{
  "roots": ["<rootDir>/src", "<rootDir>/test"],
  "preset": "ts-jest",
  "collectCoverage": true,
  "collectCoverageFrom": ["./src/**/*.ts", "!**/**/*.d.ts"],
  "coverageDirectory": "./coverage",
  "coverageReporters": ["json", "html", "text", "text-summary"],
  "coverageThreshold": {
    "global": {
      "branches": 75,
      "functions": 75,
      "lines": 75,
      "statements": 75
    }
  },
  "verbose": true
}
